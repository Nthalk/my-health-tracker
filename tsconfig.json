{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "rootDir": "./",
    "sourceMap": false,
    "allowJs": true,
    "keyofStringsOnly": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "lib": ["dom", "es2015"]
  },

  "include": ["web/src/global.d.ts"],
  "files": ["web/src/main/web/boot.tsx"],
  "exclude": ["node_modules/**.*"]
}
